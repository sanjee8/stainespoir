{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    {% for label, msgs in app.flashes %}
        {% for m in msgs %}
            <div class="alert alert-{{ label }}">{{ m }}</div>
        {% endfor %}
    {% endfor %}

    <h1 style="margin-bottom:6px">Dossier parent</h1>
    <p class="text-muted" style="margin-bottom:16px">
        {{ parent.email }}
        {% if parent.isApproved %} · <span class="badge bg-success">Validé</span>
        {% else %} · <span class="badge bg-warning text-dark">En attente</span>{% endif %}
    </p>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Enfants rattachés</h5>
            {% if children is empty %}
                <p class="text-muted mb-0">Aucun enfant.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead><tr><th>Nom</th><th>Niveau</th><th>Naissance</th><th>Statut</th><th style="width:1%"></th></tr></thead>
                        <tbody>
                        {% for c in children %}
                            <tr>
                                <td>{{ c.firstName }} {{ c.lastName }}</td>
                                <td>{{ c.level }}</td>
                                <td>{{ c.dob ? c.dob|date('d/m/Y') : '—' }}</td>
                                <td>
                                    {% if c.isApproved %}
                                        <span class="badge bg-success">Validé</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if not c.isApproved %}
                                        <form method="post" action="{{ path('admin_parent_child_approve', { id: c.id }) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve_child_'~c.id) }}">
                                            <button class="btn btn-sm btn-primary">Valider l’enfant</button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title mb-0">Messages</h5>
                {% if children is not empty %}
                    <form method="get" action="{{ path('admin_parent_dossier', { id: parent.id }) }}" class="d-flex align-items-center gap-2">
                        <label class="form-label mb-0 me-2">Enfant</label>
                        <select class="form-select form-select-sm" name="child_id" onchange="this.form.submit()">
                            {% for c in children %}
                                <option value="{{ c.id }}" {{ selected and c.id==selected.id ? 'selected' }}>{{ c.firstName }} {{ c.lastName }} — {{ c.level }}</option>
                            {% endfor %}
                        </select>
                        <noscript><button class="btn btn-sm btn-secondary">Voir</button></noscript>
                    </form>
                {% endif %}
            </div>

            {% if not selected %}
                <p class="text-muted mb-0">Sélectionnez un enfant pour voir les messages.</p>
            {% else %}
                {% if messages is empty %}
                    <p class="text-muted mb-0">Aucun message pour {{ selected.firstName }}.</p>
                {% else %}
                    <div class="border rounded p-3" style="max-height:340px; overflow:auto">
                        {% for m in messages %}
                            <div class="mb-2">
                                <div class="small text-muted">
                                    {{ m.createdAt|date('d/m/Y H:i') }} — {{ m.from == 'staff' ? 'Staff' : 'Parent' }}
                                </div>
                                <div>{{ m.body|nl2br }}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Sorties signées</h5>
            {% if not selected %}
                <p class="text-muted mb-0">Sélectionnez un enfant pour voir ses sorties signées.</p>
            {% else %}
                {% if signedRegs is empty %}
                    <p class="text-muted mb-0">Aucune sortie signée pour {{ selected.firstName }}.</p>
                {% else %}
                    <div class="row g-3">
                        {% for r in signedRegs %}
                            <div class="col-12 col-md-6">
                                <div class="border rounded p-3 h-100">
                                    <div class="d-flex justify-content-between">
                                        <strong>{{ r.outing.title }}</strong>
                                        <span class="badge bg-success">Signée</span>
                                    </div>
                                    <div class="small text-muted">{{ r.outing.startsAt|date('d/m/Y H:i') }} — {{ r.outing.location }}</div>
                                    {% if r.outing.description %}
                                        <div class="mt-2">{{ r.outing.description|striptags|length > 160 ? r.outing.description|striptags|slice(0,160) ~ '…' : r.outing.description|striptags }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

    {% if not parent.isApproved %}
        <div class="card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div><strong>Validation du compte parent</strong></div>
                <form method="post" action="{{ path('admin_parent_approve', { id: parent.id }) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('approve_parent_'~parent.id) }}">
                    <button class="btn btn-success">Valider le parent</button>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}
